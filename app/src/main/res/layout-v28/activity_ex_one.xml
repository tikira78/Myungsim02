<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="@color/white"
    tools:context=".exercise.ExOneActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/data_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <VideoView
                    android:id="@+id/vv"
                    android:layout_width="match_parent"
                    android:layout_height="240dp"
                    android:layout_gravity="center_horizontal"
                     />

                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/btn_prev"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginStart="10dp"
                    android:contentDescription="@string/backward"
                    app:backgroundTint="@color/deepgreen"
                    app:srcCompat="@drawable/ic_baseline_keyboard_arrow_left_24"
                    tools:ignore="SpeakableTextPresentCheck,ImageContrastCheck" />

                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/btn_next"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginEnd="10dp"
                    android:contentDescription="@string/forward"
                    app:backgroundTint="@color/deepgreen"
                    app:srcCompat="@drawable/ic_baseline_keyboard_arrow_right_24"
                    tools:ignore="ImageContrastCheck" />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="4dp"
                android:background="@drawable/profile"
                android:backgroundTint="@color/deepgreen"
                android:orientation="vertical"
                android:padding="20dp">


                <TextView
                    android:id="@+id/tv_data3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/elice"
                    android:gravity="center_horizontal"
                    android:text="@string/target"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <View
                    android:id="@+id/divider4"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="6dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginBottom="20dp"
                    android:alpha="0.5"
                    android:background="@color/white" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/profile"
                    android:backgroundTint="@color/deepgreen"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_data4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:bufferType="spannable"
                        android:fontFamily="@font/gowun"
                        android:lineSpacingExtra="8sp"
                        android:textAlignment="center"
                        android:textColor="#FFF1DC"
                        android:textSize="18sp"
                        android:textStyle="bold" />


                    <View
                        android:id="@+id/divider6"
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginEnd="20dp"

                        android:alpha="0.5"
                        android:background="@color/white" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"


                        android:gravity="center_horizontal"
                        android:orientation="horizontal"
                        android:padding="20dp">

                        <Button
                            android:id="@+id/button1"
                            style="?android:attr/buttonBarButtonStyle"
                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            android:background="@drawable/button_color4"
                            android:fontFamily="@font/elice"
                            android:text="@string/ex1"
                            android:textColor="@color/deepgreen"
                            android:textSize="16sp" />

                        <Button
                            android:id="@+id/button2"
                            style="?android:attr/buttonBarButtonStyle"
                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            android:layout_marginStart="20dp"
                            android:background="@drawable/button_color3"
                            android:fontFamily="@font/elice"
                            android:outlineAmbientShadowColor="@color/white"
                            android:outlineSpotShadowColor="@color/white"
                            android:text="@string/rec"
                            android:textColor="#33691E"
                            android:textSize="16sp" />

                        <Button
                            android:id="@+id/button3"
                            style="?android:attr/buttonBarButtonStyle"
                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            android:layout_marginStart="20dp"
                            android:background="@drawable/button_color4"
                            android:fontFamily="@font/elice"
                            android:text="@string/see1"
                            android:textColor="@color/deepgreen"
                            android:textSize="16sp" />

                    </LinearLayout>

                </LinearLayout>


            </LinearLayout>


        </LinearLayout>
    </ScrollView>

</RelativeLayout>