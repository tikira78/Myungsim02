<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".record.RecordActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/recordBP"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="8dp"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    android:padding="8dp">

                    <TextView
                        android:id="@+id/upDate"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:gravity="center"
                        android:layout_marginStart="24dp"
                        android:layout_marginEnd="28dp"
                        android:ems="10"
                        android:fontFamily="@font/welcome"
                        android:background="@drawable/profile"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:orientation="vertical">

                        <EditText
                            android:id="@+id/ed1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="24dp"
                            android:layout_marginTop="16dp"
                            android:layout_marginEnd="24dp"
                            android:ems="10"
                            android:focusableInTouchMode="true"
                            android:hint="수축기혈압(mmHg)"
                            android:inputType="number"
                            android:minHeight="48dp"
                            android:textSize="20sp" />

                        <EditText
                            android:id="@+id/ed2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="24dp"
                            android:layout_marginTop="12dp"
                            android:layout_marginEnd="24dp"
                            android:ems="10"
                            android:hint="이완기혈압(mmHg)"
                            android:inputType="number"
                            android:minHeight="48dp"
                            android:textSize="20sp" />

                        <EditText
                            android:id="@+id/ed3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="24dp"
                            android:layout_marginTop="12dp"
                            android:layout_marginEnd="24dp"
                            android:ems="10"
                            android:hint="맥박수(회/분)"
                            android:inputType="number"
                            android:minHeight="48dp"
                            android:textSize="20sp" />

                        <EditText
                            android:id="@+id/ed4"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="24dp"
                            android:layout_marginTop="12dp"
                            android:layout_marginEnd="24dp"
                            android:ems="10"
                            android:hint="혈당수치(mg/dL)"
                            android:inputType="numberDecimal"
                            android:minHeight="48dp"
                            android:textSize="20sp" />

                        <EditText
                            android:id="@+id/ed5"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="24dp"
                            android:layout_marginTop="12dp"
                            android:layout_marginEnd="24dp"
                            android:ems="10"
                            android:hint="체중(kg)"
                            android:layout_marginBottom="12dp"
                            android:inputType="numberDecimal"
                            android:minHeight="48dp"
                            android:textSize="20sp" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:orientation="horizontal"
                        android:layout_marginTop="8dp"
                        android:padding="20dp">

                        <Button
                            android:id="@+id/recordBtn"
                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            android:background="@drawable/button_color"
                            android:fontFamily="@font/welcome"
                            android:text="저장\n하기"
                            android:textColor="@color/white"
                            android:textSize="20sp" />

                        <Button
                            android:id="@+id/resultBtn"
                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            android:layout_marginStart="10dp"
                            android:background="@drawable/button_color2"
                            android:fontFamily="@font/welcome"
                            android:text="결과\n보기"
                            android:textColor="#F4F0F0"
                            android:textSize="20sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/la_front1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="30dp"
                        android:gravity="center_horizontal"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/imageView6"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_gravity="center_vertical"
                            android:src="@drawable/uuh" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:fontFamily="@font/welcome"
                            android:padding="10dp"
                            android:text="울산대병원 심장재활팀"
                            android:textSize="20sp" />

                    </LinearLayout>

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="26dp"
                            android:layout_gravity="center_horizontal"
                            android:background="#FFFFFF"
                            android:backgroundTint="#00FFFFFF"
                            android:text="전화: 052) 250-8286" />

                    </androidx.appcompat.widget.LinearLayoutCompat>
                </LinearLayout>
            </LinearLayout>

        </RelativeLayout>
    </ScrollView>
</FrameLayout>