<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="@color/white"
    tools:context=".exercise.ExTwoActivity">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/profile"
            android:orientation="vertical"
            android:padding="10dp">

            <RadioGroup
                android:id="@+id/rg_exercise"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:outlineAmbientShadowColor="@color/white"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <RadioButton
                    android:id="@+id/ex1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:buttonTint="@color/white"
                    android:drawablePadding="2dp"
                    android:fontFamily="@font/elice"
                    android:minHeight="48dp"
                    android:text="걷기"
                    android:textColor="#FBFBFB"
                    android:textSize="24sp" />

                <RadioButton
                    android:id="@+id/ex2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:buttonTint="@color/white"
                    android:drawablePadding="2dp"
                    android:fontFamily="@font/elice"
                    android:minHeight="48dp"
                    android:text="달리기/조깅"
                    android:textColor="#FBFBFB"
                    android:textSize="24sp" />

                <RadioButton
                    android:id="@+id/ex3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:baselineAligned="false"
                    android:buttonTint="@color/white"
                    android:drawablePadding="2dp"
                    android:fontFamily="@font/elice"
                    android:minHeight="48dp"
                    android:text="러닝머신"
                    android:textColor="#FBFBFB"
                    android:textSize="24sp" />

                <RadioButton
                    android:id="@+id/ex4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:buttonTint="@color/white"
                    android:drawablePadding="2dp"
                    android:fontFamily="@font/elice"
                    android:minHeight="48dp"
                    android:text="자전거"
                    android:textColor="#FBFBFB"
                    android:textSize="24sp" />

                <RadioButton
                    android:id="@+id/ex5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="0dp"
                    android:buttonTint="@color/white"
                    android:drawablePadding="2dp"
                    android:fontFamily="@font/elice"
                    android:minHeight="48dp"
                    android:text="기타(근력운동 등)"
                    android:textColor="#FBFBFB"
                    android:textSize="24sp" />
            </RadioGroup>

            <Button
                android:id="@+id/btn_select"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginStart="0dp"
                android:layout_marginTop="24dp"
                android:background="@drawable/button_color4"
                android:fontFamily="@font/elice"
                android:text="확인"
                android:textColor="@color/green"
                android:textSize="18sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/rg_exercise" />
        </LinearLayout>


    </androidx.appcompat.widget.LinearLayoutCompat>



</RelativeLayout>